            if (in_array($sku, _rtpr_commerce_buck_sku_list())) {
              $result['order'] = $current_order;
              $result['sku'] = $sku;
              $count++;
            }
          }
      }
    }
    catch (EntityMetadataWrapperException $exc) {
      watchdog(
        'rtpr_commerce',
